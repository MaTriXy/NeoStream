<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorAccentLight">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/header_online"
            android:layout_marginStart="13dp"
            android:layout_marginTop="9dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/online_channels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorAccentLight">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/header_hosting"
            android:layout_marginStart="13dp"
            android:layout_marginTop="9dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/hosting_channels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorAccentLight">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/header_offline"
            android:layout_marginStart="13dp"
            android:layout_marginTop="9dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/offline_channels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/channelStatuses"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:layout_marginTop="18dp"/>
</LinearLayout>